{
  "name": "microk8s-volume-metrics",
  "version": "1.0.0",
  "description": "microk8s volume metrics",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "start_local": "PORT=27770 MOUNT=/System/Volumes/Data ./node_modules/.bin/nodemon --watch src -e ts --delay 2 src/index.ts",
    "start": "./node_modules/.bin/ts-node src/index.ts",
    "build": "./node_modules/.bin/tsc --build"
  },
  "author": "jw@1xp.com",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.201",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.6.1",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "node-df": "^0.1.4",
    "prom-client": "^15.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "collectCoverage": true,
    "rootDir": "src",
    "testRegex": ".spec.",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageReporters": [
      "text",
      "json",
      "json-summary",
      "lcov",
      "clover"
    ],
    "reporters": [
      "default"
    ]
  }
}
